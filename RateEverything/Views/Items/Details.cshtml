@model RateEverything.Models.CombinedItem


@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="modalDialog" style="display:none">
    <h1 id="responseDialog"></h1>
</div>

<h1>Details</h1>

<div>
    <h4>Item</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CurrentItem.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CurrentItem.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CurrentItem.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CurrentItem.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CurrentItem.Rating)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CurrentItem.Rating)
        </dd>
    </dl>
</div>
<div>
    <button type="button" class="btn btn-primary" data-bs-toggle="button" onclick="showRatingPopup()">Rate this item!</button>
    <div id="RatingPopup" style="display:none">
        <label for="rating">Enter a rating from 1-5:</label><br>
        <input type="text" id="rating" name="rating"><br>
        <input type="button" value="Submit" onclick="postRating('@Model.CurrentItem.ItemId')">
    </div>
</div>
<br />
<div>
    <a class="btn btn-sm btn-secondary" asp-area="" asp-controller="ItemComments" asp-action="Index" asp-route-id="@Model.CurrentItem.ItemId">Comments</a> |
    <a class="btn btn-sm btn-secondary" asp-action="Edit" asp-route-id="@Model.CurrentItem.ItemId">Edit</a> |
    <a class="btn btn-sm btn-secondaryI" asp-action="Index">Back to List</a>
</div>
